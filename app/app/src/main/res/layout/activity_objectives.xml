<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.msu.monstersfactory.ObjectivesActivity">

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:id="@+id/radioGroup">

    <RadioButton
        android:layout_width="335dp"
        android:layout_height="wrap_content"
        android:text="Health and Welfare"
        android:id="@+id/health_button"
        android:checked="false"
        android:drawableRight="@mipmap/ic_health"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <RadioButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Loose Weight and Fat"
        android:id="@+id/fat_button"
        android:checked="false"
        android:drawableRight="@mipmap/ic_fat"
        android:layout_below="@+id/health_button"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/health_button" />

    <RadioButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hypertrophy"
        android:id="@+id/hyper_button"
        android:checked="false"
        android:drawableRight="@mipmap/ic_muscle"
        android:layout_below="@+id/fat_button"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/fat_button" />

    <RadioButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableRight="@mipmap/ic_flex"
        android:text="Flexibility"
        android:id="@+id/flex_button"
        android:checked="false"
        android:layout_below="@+id/hyper_button"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/hyper_button" />

    <RadioButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Resistence"
        android:id="@+id/res_button"
        android:checked="false"
        android:layout_below="@+id/flex_button"
        android:layout_alignParentStart="true"
        android:drawableRight="@mipmap/ic_res"
        android:layout_alignEnd="@+id/flex_button" />
</RadioGroup>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="next"
        android:id="@+id/button_next"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="75dp"
        android:layout_alignEnd="@+id/radioGroup" />
</RelativeLayout>
